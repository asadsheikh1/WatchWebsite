@model WatchStore.Models.orders

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!-- /.card -->
        <!-- Horizontal Form -->

        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Edit Order</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.orderId)
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="control-label col-md-4">Full Name</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.fullName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-4">Phone</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-4">Address</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.addressDetail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.addressDetail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-4">Order Status</label>
                            <div class="col-md-8">

                                @Html.DropDownListFor(model => model.orderStatus, new List<SelectListItem>
                                    {
                                           new SelectListItem{ Text="Received", Value = "0" },
                                           new SelectListItem{ Text="Processing", Value = "1" },
                                           new SelectListItem{ Text="Shipped", Value = "2" },
                                           new SelectListItem{ Text="Cancelled", Value = "3" },
                                           new SelectListItem{ Text="Completed", Value = "4" },

                                    }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.orderStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-white" style="margin-top:-25px">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" onclick="gotoBack()" class="btn btn-info float-right">Back to List</button>
                    </div>

                </div>
            }

        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function gotoBack() {
        window.location.href = "/ManageOrders/Index"
    }
</script>