@model IEnumerable<WatchStore.Models.categories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="mb-3">Categories List</h3>

        <p class="mb-3">
            <a href="/ManageCategories/Create" class="btn btn-success btn-sm">Create New</a>
        </p>
        <table class="table bg-white table-bordered table-hover" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.categoryName)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.categoryName)
                        </td>
                        <td>


                            @Html.ActionLink("Edit", "Edit", new { id = item.categoryId }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.categoryId }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.categoryId }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
$(function () {
    $("#table").DataTable({
      "responsive": true,
        "autoWidth": false,
        'columnDefs': [{

            'targets': [1], /* column index */

            'orderable': false, /* true or false */

        }]
    });

  });</script>