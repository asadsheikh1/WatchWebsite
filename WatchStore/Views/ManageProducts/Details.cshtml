@model WatchStore.Models.products

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Product Details</h3>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.productId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.productId)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.productName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.productName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.productPrice)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.productPrice)$
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.productQty)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.productQty)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.productImage)
                    </dt>

                    <dd>
                        <img src="@Url.Content(Model.productImage)" style="height:50px;width:50px" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.productDesc)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.productDesc)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.categories.categoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.categories.categoryName)
                    </dd>
                </dl>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.productId }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-info" })
                </p>
            </div>

        </div>
    </div>
    <div class="col-md-3"></div>
</div>


