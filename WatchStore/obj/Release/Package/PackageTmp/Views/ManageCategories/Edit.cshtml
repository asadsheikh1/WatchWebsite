@model WatchStore.Models.categories

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <!-- /.card -->
        <!-- Horizontal Form -->
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Edit Category</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.categoryId)
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="control-label col-md-4">Cateogory Name</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-white" style="margin-top:-25px">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" onclick="gotoBack()" class="btn btn-info float-right">Back to List</button>
                    </div>

                </div>
            }

        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function gotoBack() {
        window.location.href = "/ManageCategories/Index"
    }
</script>